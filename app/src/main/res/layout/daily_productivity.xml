<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/progressBar_loading_chart"
        style="?android:attr/progressBarStyle"
        android:visibility="visible"
        android:layout_centerInParent="true"
        android:layout_above="@id/plot_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/plot_layout"
    tools:context="com.example.myperformance.ui.chart.DailyProductivityFragment">


    <com.androidplot.xy.XYPlot
        android:id="@+id/plot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:renderMode="use_background_thread"
        app:paddingBottom="20dp"
        style="@style/APDefacto.Light"
        />

</LinearLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myperformance">

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>

    <application
        android:name=".app.App"
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/app_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.myperformance.ui.activities.PersonalAreaActivity"
            android:parentActivityName="com.example.myperformance.ui.activities.ScrolbarActivity" />
        <activity
            android:name="com.example.myperformance.ui.activities.TabChartActivity"
            android:parentActivityName="com.example.myperformance.ui.activities.ScrolbarActivity" />
        <activity
            android:name="com.example.myperformance.ui.activities.ScrolbarActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <service android:name=".service.TimeCounterService" android:enabled="true" />
        <receiver android:name=".broadcast.Restarter" android:enabled="true" android:exported="true">
            <intent-filter>
                <action android:name="restartservice" />
            </intent-filter>
        </receiver>
    </application>

</manifest>